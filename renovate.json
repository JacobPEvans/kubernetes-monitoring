{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Group all dependency updates into a single PR",
      "matchPackagePatterns": [".*"],
      "groupName": "all dependencies",
      "groupSlug": "all-dependencies"
    },
    {
      "description": "Tier 1: Automerge own and official GitHub Actions (all update types)",
      "matchManagers": ["github-actions"],
      "matchPackagePrefixes": ["actions/", "JacobPEvans/"],
      "groupName": "github-actions-trusted",
      "groupSlug": "github-actions-trusted",
      "automerge": true,
      "automergeType": "squash"
    },
    {
      "description": "Tier 2: Automerge minor/patch from vetted well-known publishers",
      "matchManagers": ["github-actions"],
      "matchPackagePrefixes": ["aquasecurity/", "googleapis/"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "github-actions-vetted",
      "groupSlug": "github-actions-vetted",
      "automerge": true,
      "automergeType": "squash"
    },
    {
      "description": "Automerge pre-commit minor and patch updates",
      "matchManagers": ["pre-commit"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "pre-commit hooks",
      "groupSlug": "pre-commit-hooks",
      "automerge": true,
      "automergeType": "squash"
    }
  ]
}
